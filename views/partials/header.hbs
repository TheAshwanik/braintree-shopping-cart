<div class="row">
    <div class="col-xs-4">
        <div class="pull-left">
        <a href="/"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </div>
    </div>
    <div class="col-xs-8">
        <div id="mydropdown" class="dropdown pull-right">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart
                {{# if session.cart.totalItems }}
                <span>({{session.cart.totalItems}})</span>
                {{/if}}
            </a>
            {{# if session.cart.totalItems }}
            <div class="dropdown-menu">
                <div class="cart">
                    {{# each session.cart.items }}
                    <div class="row">
                        <div class="col-xs-4">
                            {{ this.item.title }}
                        </div>
                        <div class="col-xs-4 text-right">
                            <span class="badge">{{ this.quantity }}</span>
                        </div>
                        <div class="col-xs-4 text-right">
                            {{ this.price }} GBP
                        </div>
                    </div>
                    {{/each}}
                    <div class="row">
                        <!-- <div class="text-right">
                            <div class="totalPrice">Total: {{ session.cart.totalPrice }} GBP</div>
                            <a href="/cart" class="btn btn-success">Proceed</a>
                        </div>-->
                        <form action="/cart" id="proceedToCartForm" method="post">
                           <input type="hidden" name="mycustomer" id="mycustomer" value="{{ session.mycustomer }}"> </input>
                           <button class="btn btn-success pull-right" type="submit" name="Proceed To Cart" id="addToCartButton">Proceed To Cart</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
